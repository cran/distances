MAKECONF = $(R_HOME)/etc$(R_ARCH)/Makeconf

PKG_LIBS = libann/lib/libann.a -lstdc++

.PHONY: clean

$(SHLIB): libann/lib/libann.a

libann/lib/libann.a:
	(cd libann && MAKECONF="$(MAKECONF)" $(MAKE)) || exit 1;

clean:
	$(RM) $(SHLIB) *.o
	(cd libann && MAKECONF="$(MAKECONF)" $(MAKE) clean) || exit 1;
